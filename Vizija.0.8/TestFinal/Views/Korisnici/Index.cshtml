
@model IEnumerable<TestFinal.Models.UserWithRoles>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Spisak Korisnika</h2>

<p>
    @Html.ActionLink("[Dodaj Novog Korisnika]", "Register", "Account")
</p>
<table class="table table-hover table-responsive table-striped table-bordered">
    <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Password-Hash</th>
        <th>Pravo pristupa</th>
        <th>Opcije</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>

            <td>

                @Html.DisplayFor(modelItem=> item.Role)
            </td>


            <td>
                @Html.ActionLink("Izmeni", "EditRegister","Account", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
