@model IEnumerable<TestFinal.Models.KontaktTelefon>

@{
    ViewBag.Title = "Index";
}

<h2>Kontakt: @ViewBag.ImeOsobe @ViewBag.PrezimeOsobe
   
    </h2>

<table class="table table-hover table-responsive table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OznakaTelefona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojTelefona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lokal)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OznakaTelefona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojTelefona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lokal)
        </td>
        
        <td>
          
            @Html.ActionLink("Detalji", "Details", new { id=item.IDTel }) |
          
        </td>
    </tr>
}

</table>
<div>

    @Html.ActionLink("Nazad", "Index", "Kontakt", new { id = ViewBag.Idiot }, null)
</div>