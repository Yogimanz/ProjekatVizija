@model IEnumerable<TestFinal.Models.KontaktMail>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.ImeOsobe @ViewBag.PrezimeOsobe E-mail 
    </h2>

<table class="table table-hover table-responsive table-striped table-bordered">
    <tr>
        <th>
           
            @Html.DisplayNameFor(model => model.Kontakt.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OznakaPosla)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kontakt.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OznakaPosla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>

        <td>
          
            @Html.ActionLink("Detalji", "Details", new { id = item.IDMail }) |
        </td>
    </tr>
}

</table>
<div>

    @Html.ActionLink("Nazad", "Index", "Kontakt", new { id = ViewBag.Id }, null)
</div>