@model TestFinal.Models.GlavnaTabela

@{
    ViewBag.Title = "Details";
}

<h2>Detalji</h2>

<div>
    <h4>Preduzeće</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NazivPreduzeca):
            <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazivPreduzeca) 
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdresaRegistracijePreduzeca) <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdresaRegistracijePreduzeca)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Opstina): <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Opstina)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaticniBrojPreduzeca): <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaticniBrojPreduzeca)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PIB): <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PIB)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BrRacuna): <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BrRacuna)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WebStranica): <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WebStranica)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fotografija) <p></p>
        </dt>

        <dd>
            @{
             if (Model.Fotografija != null)
              {
            var base64 = Convert.ToBase64String(Model.Fotografija);
            var imgSrc = string.Format("data: image/gif; base64, {0}", base64);
            <img src='@imgSrc' style="max-width:100px; max-height:100px" />
              }



            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Beleska): <p></p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Beleska)
        </dd>

    </dl>
</div>
